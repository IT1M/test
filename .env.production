# Production Environment Variables
# Saudi Mais Inventory System

# Database - Production (Replace with your production database URL)
DATABASE_URL="postgresql://username:password@your-production-db-host:5432/saudi_mais_inventory?schema=public&sslmode=require"

# NextAuth - Production
NEXTAUTH_URL="https://your-production-domain.com"
NEXTAUTH_SECRET="your-super-secure-secret-key-for-production-min-32-chars"

# Gemini AI - Production
GEMINI_API_KEY="your-production-gemini-api-key"

# Email Configuration - Production
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT="587"
SMTP_USER="noreply@saudimais.sa"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="noreply@saudimais.sa"

# App Configuration - Production
NEXT_PUBLIC_APP_URL="https://your-production-domain.com"
NODE_ENV="production"

# Security Settings
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"
SESSION_TIMEOUT="1800"

# Monitoring & Logging
LOG_LEVEL="error"
ENABLE_ANALYTICS="true"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"